# GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=dll-debug_x32
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),dll-debug_x32)
  helloworld_config = dll-debug_x32
endif
ifeq ($(config),dll-debug_x64)
  helloworld_config = dll-debug_x64
endif
ifeq ($(config),dll-release_x32)
  helloworld_config = dll-release_x32
endif
ifeq ($(config),dll-release_x64)
  helloworld_config = dll-release_x64
endif
ifeq ($(config),lib-debug_x32)
  helloworld_config = lib-debug_x32
endif
ifeq ($(config),lib-debug_x64)
  helloworld_config = lib-debug_x64
endif
ifeq ($(config),lib-release_x32)
  helloworld_config = lib-release_x32
endif
ifeq ($(config),lib-release_x64)
  helloworld_config = lib-release_x64
endif

PROJECTS := helloworld

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

helloworld:
ifneq (,$(helloworld_config))
	@echo "==== Building helloworld ($(helloworld_config)) ===="
	@${MAKE} --no-print-directory -C src -f Makefile config=$(helloworld_config)
endif

clean:
	@${MAKE} --no-print-directory -C src -f Makefile clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  dll-debug_x32"
	@echo "  dll-debug_x64"
	@echo "  dll-release_x32"
	@echo "  dll-release_x64"
	@echo "  lib-debug_x32"
	@echo "  lib-debug_x64"
	@echo "  lib-release_x32"
	@echo "  lib-release_x64"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   helloworld"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"